{
  "name": "authentication",
  "description": "The auth server and modules for PAYW software",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "ttsc && parcel build src/client/index.html -d public",
    "dev:client": "parcel src/client/index.html",
    "dev:server": "cross-env NODE_ENV=development HOST=local tsnd -r tsconfig-paths/register --transpile-only src/main.ts",
    "dev": "run-p dev:server dev:client",
    "dev:remote": "cross-env NODE_ENV=development HOST=remote tsnd -r tsconfig-paths/register --transpile-only src/main.ts",
    "start:local": "cross-env NODE_ENV=production HOST=local node dist/main.js",
    "start": "cross-env NODE_ENV=production HOST=remote node dist/main.js",
    "introspect:dev": "prisma introspect --schema prisma/schema.dev.prisma",
    "generate:dev": "prisma generate --schema prisma/schema.dev.prisma",
    "introspect:prod": "prisma introspect --schema prisma/schema.prod.prisma",
    "generate:prod": "prisma generate --schema prisma/schema.prod.prisma",
    "migrate": "prisma migrate dev --preview-feature --schema prisma/schema.prisma",
    "pm2:start": "pm2 start npm --name 'payw-auth' -- run start",
    "pm2:restart": "if pm2 show payw-auth ; then pm2 restart payw-auth ; else echo 'No pm2 instance for payw-auth' ; fi",
    "pm2:stop": "if pm2 show payw-auth ; then pm2 stop payw-auth ; else echo 'No pm2 instance for payw-auth' ; fi",
    "pm2:delete": "if pm2 show payw-auth ; then pm2 delete payw-auth ; else echo 'No pm2 instance for payw-auth' ; fi",
    "pm2:reboot": "npm ci && npm run build && npm run pm2:stop && npm run pm2:delete && npm run pm2:start"
  },
  "dependencies": {
    "@prisma/client": "^2.13.0",
    "app-root-path": "^3.0.0",
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "cors": "^2.8.5",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "express-validator": "^6.8.0",
    "gsap": "^3.5.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0",
    "query-string": "^6.13.7"
  },
  "devDependencies": {
    "@prisma/cli": "^2.13.0",
    "@types/app-root-path": "^1.2.4",
    "@types/body-parser": "^1.19.0",
    "@types/cors": "^2.8.9",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.12",
    "@types/passport": "^1.0.4",
    "@types/passport-google-oauth": "^1.0.41",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.3",
    "npm-run-all": "^4.1.5",
    "parcel-bundler": "^1.12.4",
    "sass": "^1.30.0",
    "ts-node-dev": "^1.1.1",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.1.3"
  }
}
