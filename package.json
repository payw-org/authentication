{
  "name": "@payw/auth",
  "description": "The auth server and modules for PAYW software",
  "version": "0.1.0",
  "license": "MIT",
  "scripts": {
    "build": "ttsc && parcel build src/client/index.html -d public",
    "dev": "cross-env NODE_ENV=development HOST=local tsnd -r tsconfig-paths/register --transpile-only src/main.ts",
    "dev:remote": "cross-env NODE_ENV=development HOST=remote tsnd -r tsconfig-paths/register --transpile-only src/main.ts",
    "start:local": "cross-env NODE_ENV=production HOST=local node dist/main.js",
    "start": "cross-env NODE_ENV=production HOST=remote node dist/main.js",
    "introspect": "prisma introspect",
    "generate": "prisma generate",
    "migrate": "prisma migrate save --experimental && prisma migrate up --experimental"
  },
  "dependencies": {
    "@prisma/client": "^2.11.0",
    "app-root-path": "^3.0.0",
    "axios": "^0.21.0",
    "body-parser": "^1.19.0",
    "date-fns": "^2.16.1",
    "express": "^4.17.1",
    "jsonwebtoken": "^8.5.1",
    "passport": "^0.4.1",
    "passport-google-oauth": "^2.0.0"
  },
  "devDependencies": {
    "@prisma/cli": "^2.11.0",
    "@types/app-root-path": "^1.2.4",
    "@types/body-parser": "^1.19.0",
    "@types/express": "^4.17.9",
    "@types/jsonwebtoken": "^8.5.0",
    "@types/node": "^14.14.7",
    "@types/passport": "^1.0.4",
    "@types/passport-google-oauth": "^1.0.41",
    "@zerollup/ts-transform-paths": "^1.7.18",
    "chalk": "^4.1.0",
    "cross-env": "^7.0.2",
    "parcel-bundler": "^1.12.4",
    "ts-node-dev": "^1.0.0",
    "tsconfig-paths": "^3.9.0",
    "ttypescript": "^1.5.12",
    "typescript": "^4.0.5"
  }
}
